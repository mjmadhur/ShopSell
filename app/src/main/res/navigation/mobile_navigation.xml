<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"

    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.shopsell.activity.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_Products"
        android:name="com.example.shopsell.activity.ui.home.MyProductsFragment"
        android:label="Sell Your Products"
        tools:layout="@layout/fragment_products" />

    <fragment
        android:id="@+id/navigation_Orders"
        android:name="com.example.shopsell.activity.ui.notifications.OrdersFragment"
        android:label="Orders"
        tools:layout="@layout/fragment_orders" />
    <fragment
        android:id="@+id/navigation_sold_products"
        android:name="com.example.shopsell.activity.ui.fragments.SoldProducts.SoldFragment"
        android:label="Your Sold Items"
        tools:layout="@layout/fragment_sold" />
</navigation>